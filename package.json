{
  "name": "chipbot-wrapper",
  "version": "0.0.2",
  "license": "MIT",
  "description": "A lightweight wrapper for chipbot.",
  "repository": "github:DaPotatoMan/chipbot-wrapper",
  "author": {
    "name": "Fahadul Islam",
    "email": "dev.iamfahad@gmail.com",
    "url": "https://github.com/dapotatoman"
  },
  "bugs": {
    "url": "https://github.com/DaPotatoMan/chipbot-wrapper/issues",
    "email": "dev.iamfahad@gmail.com"
  },
  "keywords": [
    "chipbot",
    "wrapper",
    "loader"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepare": "npm run build",
    "prepublishOnly": "pnpm build",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@types/node": "^17.0.35",
    "bumpp": "^7.1.1",
    "eslint": "^8.16.0",
    "tsup": "^5.12.8",
    "typescript": "^4.6.4"
  }
}
